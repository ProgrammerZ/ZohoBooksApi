<?php
namespace Webleit\ZohoBooksApi\Modules;


class Import extends Module
{


    /**
     * @param $crm_contact_id
     * @return bool
     */
    public function contact($crm_contact_id)
    {
        $this->urlPath = 'crm/contact/';
        return $this->importFromCRM($crm_contact_id);
    }


    /**
     * @param $crm_account_id
     * @return bool
     */
    public function account($crm_account_id)
    {
        $this->urlPath = 'crm/account/';
        return $this->importFromCRM($crm_account_id);
    }


    /**
     * @param $crm_vendor_id
     * @return bool
     */
    public function vendor($crm_vendor_id)
    {
        $this->urlPath = 'crm/vendor/';
        return $this->importFromCRM($crm_vendor_id);
    }
    
    
    /**
     * @param $crm_id
     * @return Model
     */
    public function importFromCRM ($crm_id)
    {
        $data = $this->client->post(
            $this->getUrl() . $crm_id . '/import', ['blank'=>'']
        );
        return $this->make($data);
    }
    

}
